{
  "tests": [
    {
      "name": "Test AI chat with history",
      "method": "POST",
      "path": "/",
      "body": {
        "message": "А сколько это стоит?",
        "history": [
          {
            "sender": "user",
            "text": "Что такое чип-тюнинг?"
          },
          {
            "sender": "ai",
            "text": "Чип-тюнинг — это перепрограммирование электронного блока управления двигателем."
          }
        ]
      },
      "expectedStatus": 200,
      "expectedBody": {
        "response": "string",
        "message": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test empty message validation",
      "method": "POST",
      "path": "/",
      "body": {
        "message": ""
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Message is required"
      },
      "bodyMatcher": "partial"
    }
  ]
}